@using AmoebaProject.Areas.ViewModels
@model CreateEmployeeVM

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div az class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Basic form elements</h4>
                        <p class="card-description">
                            Basic form elements
                        </p>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <label asp-for="Name" for="exampleInputName1">Name</label>
                                <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Profession" for="exampleInputName1">Profession</label>
                                <input asp-for="Profession" class="form-control" id="exampleInputName1" placeholder="Profession">
                                <span asp-validation-for="Profession" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" for="exampleInputName1">Description</label>
                                <input asp-for="Description" class="form-control" id="exampleInputName1" placeholder="Description">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="XLink" for="exampleInputName1">Twitter</label>
                                <input asp-for="XLink" class="form-control" id="exampleInputName1" placeholder="Twitter link">
                                <span asp-validation-for="XLink" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="InstagramLink" for="exampleInputName1">Instagram</label>
                                <input asp-for="InstagramLink" class="form-control" id="exampleInputName1" placeholder="Instagram link">
                                <span asp-validation-for="InstagramLink" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FacebookLink" for="exampleInputName1">FaceBook</label>
                                <input asp-for="FacebookLink" class="form-control" id="exampleInputName1" placeholder="Facebook link">
                                <span asp-validation-for="FacebookLink" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LinkEdinLink" for="exampleInputName1">Linkedin</label>
                                <input asp-for="LinkEdinLink" class="form-control" id="exampleInputName1" placeholder="Linkedin link">
                                <span asp-validation-for="LinkEdinLink" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo" for="exampleInputName1">Photo</label>
                                <input asp-for="Photo" class="form-control" id="exampleInputName1" placeholder="Photo">
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

