@model List<Employee>
@{
    int count = (ViewBag.CurrentPage-1)*3;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Employee Table</h4>
                        <a asp-action="Create" asp-area="AmoebaAdmin" asp-controller="Employee" class="btn btn-success">Create</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Profession
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>
                                               @count
                                            </td>
                                            <td>
                                               @item.Name
                                            </td>
                                            <td>
                                                @item.Profession
                                            </td>
                                            <td>
                                                @item.Description
                                            </td>
                                            <td class="py-1">
                                                <img src="~/assets/img/team/@item.Image" alt="@item.Name"/>
                                            </td>
                                            <td class="py-1">
                                                <a asp-action="Update" asp-area="AmoebaAdmin" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                                <a asp-action="Delete" asp-area="AmoebaAdmin" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <nav aria-label="...">
                                <ul class="pagination">
                                    
                                   @for (int i = 0; i < ViewBag.TotalPage; i++)
                                    {

                                        <li class="page-item @(ViewBag.CurrentPage-1==i?"active":"")" aria-current="page">
                                            <a class="page-link" asp-action="Index" asp-controller="Employee" asp-area="AmoebaAdmin" asp-route-page="@(i+1)">@(i+1)</a>
                                        </li>
                                    }
                                    
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
